<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Create a new campground</h2>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="new-campground-name">Campgrounds name</label>
                    <input class="form-control" id="new-campgrounds-name" type="text" placeholder="name" name="campground[name]" required>
                </div>
                <div class="form-group">
                    <label for="new-campground-price">Price per night</label>
                    <input class="form-control" id="new-campground-price" type="number" placeholder="price per night" name="campground[price]" min="0" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input id="image" type="file" accept="image/*" name="image" required>
                </div>
                <div class="form-group">
                    <label for="new-campgrounds-desc">Description</label>
                    <input class="form-control" id="new-campgrounds-desc" type="text" placeholder="description" name="campground[description]">
                </div>
                <div class="form-group">
                    <label for="new-campgrounds-url">Official website</label>
                    <input class="form-control" id="new-campgrounds-url" type="text" placeholder="https://www.yourcampsite.com" name="campground[url]" required>
                </div>
                <div class="form-group">
                    <label for="new-campgrounds-location">Location</label>
                    <input class="form-control" id="new-campgrounds-location" type="text" placeholder="Yosemite National Park, CA" name="campground[location]" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>