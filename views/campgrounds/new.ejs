<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Create a new campground</h2>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="price per night" name="price" min="0" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Yosemite National Park, CA" name="location">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>