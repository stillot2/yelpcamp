<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Edit <%=campground.name%></h2>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= campground.price%>" name="campground[price]" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input id="image" type="file" accept="image/*" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.location %>" name="campground[location]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>