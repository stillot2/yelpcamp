<% include ../partials/header %>

<div class="row">
    <div class="col-md-4">
        <h1><%=user.fname%> <%=user.lname%></h1>
        <div class="thumbnail">
            <img src="<%=user.avatar %>" alt="user profile image">
            <div class="caption">
                <a href="mailto:<%=user.email%>">Contact <%=user.username%></a>
            </div>
        </div>
        
        
    </div>
    <div class="col-md-8">
        <h3><%=user.fname%>'s campgrounds</h3>
        <ul>
        <% campgrounds.forEach(function(site) { %>
            <li><a href="/campgrounds/<%=site.id%>"><%= site.name %></a></li>
        <% }); %>
        </ul>
    </div>
</div>

<% include ../partials/footer %>